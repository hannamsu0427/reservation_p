<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<display-name>ITSP_iWORK</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<!-- <filter>
		<filter-name>HTTPSFilter</filter-name>
		<filter-class>com.han.common.HTTPSFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>HTTPSFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping> -->

	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>/WEB-INF/classes/log4j.properties</param-value>
	</context-param>

	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>ITSP_iWORK.root</param-value>
	</context-param>

	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>
	<jsp-config>
		<jsp-property-group>
			<url-pattern>*.jsp</url-pattern>
			<trim-directive-whitespaces>true</trim-directive-whitespaces>
		</jsp-property-group>
	</jsp-config>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/conf/root-context.xml</param-value>
	</context-param>
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<servlet>
		<servlet-name>appServlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/conf/servlet-context.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>*.do</url-pattern>
		<url-pattern>*.json</url-pattern>
	</servlet-mapping>
	<session-config>
		<session-timeout>360</session-timeout>
	</session-config>
	<error-page>
		<error-code>400</error-code>
		<location>/common/error/error.jsp?errCode=400</location>
	</error-page>
	<error-page>
		<error-code>401</error-code>
		<location>/common/error/error.jsp?errCode=401</location>
	</error-page>
	<error-page>
		<error-code>403</error-code>
		<location>/common/error/error.jsp?errCode=403</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/common/error/error.jsp?errCode=404</location>
	</error-page>
	<error-page>
		<error-code>405</error-code>
		<location>/common/error/error.jsp?errCode=405</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/common/error/error.jsp?errCode=500</location>
	</error-page>
	<error-page>
		<error-code>501</error-code>
		<location>/common/error/error.jsp?errCode=501</location>
	</error-page>
	<error-page>
		<error-code>503</error-code>
		<location>/common/error/error.jsp?errCode=503</location>
	</error-page>

	<error-page>
		<exception-type>com.han.common.CustomGenericException</exception-type>
		<location>/WEB-INF/views/error/custom_error.jsp</location>
	</error-page>

	<error-page>
		<exception-type>java.lang.Exception</exception-type>
		<location>/WEB-INF/views/error/exception.jsp</location>
	</error-page>

</web-app>