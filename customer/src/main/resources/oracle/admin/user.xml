	<select id="selectTotalCount" resultClass="int">
	SELECT COUNT(*) FROM(
			SELECT * FROM HJDB.ATC222TL 
			WHERE 1=1
			<isNotEmpty property="searchValue" prepend="AND">
			(
				USER_ID LIKE '%'||#searchValue#||'%'
				OR
				USER_NAME LIKE '%'||#searchValue#||'%'
			)
			</isNotEmpty> 
		) 
	</select>
	
	<select id="selectCountUserData" resultClass="int">
		SELECT COUNT(*)
		FROM HJDB.ATC222TL 
		WHERE 
		yy = #yy#
		AND term = #term#
		AND user_id = #userId#		
	</select>
	
	<insert id="saveProcUserData">
		INSERT INTO HJDB.ATC222TL (
			yy,
			term,
			user_id,
			user_name,
			password,
			dpt_cd1,
			dpt_cd2,
			etc,
			reg_date,
			reg_id,
			reg_name,
			reg_ip
		)VALUES(
			#yy#,
			#term#,
			#userId#,
			#userName#,
			#password#,
			#univeList#,
			#depList#,
			#etc#,
			SYSDATE,
			#regId#,
			#regName#,
