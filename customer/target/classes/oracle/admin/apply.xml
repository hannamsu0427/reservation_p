	<insert id="saveProcPersonalData">
		INSERT INTO HJDB.ATC210TL (
			yy,
			term,
			apply_no,
			apply_date ,
			confirm_yn,
			branch_seq,
			name,
			name_eng,
			birth_date,
			age,
			sex,
			nationality,
			zip_code,
			address1,
			address2,
			address3,
			mobile_number,
			email,
			password,
			diploma_doc,
			career_doc,
			research_doc,
			syllabus_doc,
			pass_gubun,
			nation_code
		)VALUES(
			#yy#,
			#term#,
			APPLYNO_SEQUENCE.NEXTVAL,
			sysdate, 
			'N',
			#branchSeq#,
			#name#,
			#nameEng#,
			#birthDate#,
			#age#,
			#sex#,
			(select fname from CDDB.KCH041M where CODE = #nationCode#),
			#zipCode#,
			#address1#,
			#address2#,
			#address3#,
			#mobileNumber#,
			#email#,
			#password#,
			'N',
			'N',
			'N',
			'N',
			'N',
			#nationCode#					
		)
	</insert>
	
