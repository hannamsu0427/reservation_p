				</isNotEmpty>
				<isNotEmpty property="name" prepend="AND">
				X.name = #name#
				</isNotEmpty>
				<isNotEmpty property="branchSeq" prepend="AND">
				X.branch_seq = #branchSeq#
				</isNotEmpty>
				AND X.yy = #yy#
				AND X.term = #term#
