	<select id="selectTotalCount" resultClass="int">
	
	SELECT COUNT(*) FROM (
			SELECT ROWNUM AS RNUM,A.* FROM (
	            SELECT
				    X.yy,
					X.term,
					X.apply_no,
					X.apply_date,
					X.confirm_yn,
					X.confirm_date,
					X.confirm_no,
					X.branch_seq,
					X.name,
					X.name_eng,
					X.birth_date,
					X.age,
					X.sex,
					X.nationality,
					X.zip_code,
					X.address1,
					X.address2,
					X.address3,
					X.mobile_number,
					X.phone_number,
					X.office_number,
					X.email,
					X.diploma_doc,
					X.career_doc,
					X.research_doc,
					X.syllabus_doc,
					X.pass_gubun,
					X.nation_code
				FROM
				    hjdb.atc210tl X, hjdb.atc202tl Z
				WHERE 1=1 
				AND	X.branch_seq = Z.branch_seq
				<isNotEmpty property="dptCd1" prepend="AND">
				Z.dpt_cd1 = #dptCd1#
				</isNotEmpty>
				<isNotEmpty property="dptCd2" prepend="AND">
				Z.dpt_cd2 = #dptCd2#
				</isNotEmpty>
				<isNotEmpty property="applyNo" prepend="AND">
				X.apply_no = #applyNo#
				</isNotEmpty>
				<isNotEmpty property="name" prepend="AND">
				X.name = #name#
				</isNotEmpty>
				<isNotEmpty property="branchSeq" prepend="AND">
				X.branch_seq = #branchSeq#
				</isNotEmpty>
				AND X.yy = #yy#
				AND X.term = #term#
				AND X.confirm_yn = 'Y'
				<isNotEmpty property="searchValue" prepend="AND">
				(
					X.apply_no LIKE '%'||#searchValue#||'%'
					OR
					X.name LIKE '%'||#searchValue#||'%'
				)
				</isNotEmpty>
			) A
		)
		WHERE 1=1
		<isNotEmpty property="startNum" prepend="AND">
		RNUM BETWEEN #startNum#
		AND #endNum#
		</isNotEmpty>
		
		
